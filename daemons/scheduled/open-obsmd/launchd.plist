<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>com.ttmoonnoo.scheduled.open-obsmd</string>

        <!-- Program -->
        <key>ProgramArguments</key>
        <array>
            <string>/bin/zsh</string>
            <string>-c</string>
            <string>-l</string>
            <string>osascript $HOME/.dotfiles/daemons/scheduled/focus-obsmd/script.scpt</string>
        </array>
        <key>StartInterval</key>
        <integer>3720</integer>

        <!-- Logging -->
        <key>StandardOutPath</key>
        <string>/tmp/com.ttmoonnoo.open-obsmd.out</string>
        <key>StandardErrorPath</key>
        <string>/tmp/com.ttmoonnoo.open-obsmd.err</string>
    </dict>
</plist>